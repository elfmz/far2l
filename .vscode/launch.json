{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FAR2L",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build/install/far2l",
            "stopAtEntry": true,
            "args": [
            ],
            "cwd": "${workspaceFolder}",
            "environment": [
				{
					"name": "FAR2L_STD",
					"value": "/tmp/far2l.log"
				}
			],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "FAR2L TTY",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build/install/far2l",
            "stopAtEntry": true,
            "args": [
            	"--tty"
            ],
            "cwd": "${workspaceFolder}",
            "environment": [
				{
					"name": "FAR2L_STD",
					"value": "/tmp/far2l.log"
				}
			],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Python Attach",
            "type": "debugpy",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "connect": {
                "port": 5678,
                "host": "localhost"
            },
        },
    ]
}